<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="@drawable/dashboardrectangle">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Name :: "
        android:textColor="@android:color/black"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:textSize="14dp"
        android:id="@+id/cn"/>
    <TextView
        android:id="@+id/company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:paddingTop="20dp"
        android:text="company name"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/cn"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CTC :: "
        android:layout_below="@+id/cn"
        android:paddingLeft="20dp"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        android:id="@+id/cctc"/>
    <TextView
        android:id="@+id/ctc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="author"
        android:layout_below="@+id/company"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/cctc"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Profile :: "
        android:layout_below="@+id/cctc"
        android:paddingLeft="20dp"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        android:id="@+id/cprofile"/>

    <TextView
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="profile"
        android:layout_toRightOf="@+id/cprofile"
        android:layout_below="@+id/ctc"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Profile :: "
        android:layout_below="@+id/cprofile"
        android:paddingLeft="20dp"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        android:id="@+id/cg"/>

    <TextView
        android:id="@+id/cgpa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="cgpa"
        android:layout_below="@+id/profile"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/cg"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On Board Date :: "
        android:layout_below="@+id/cg"
        android:paddingLeft="20dp"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        android:id="@+id/onb"/>

    <TextView
        android:id="@+id/onboarddate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="onboarddate"
        android:layout_below="@+id/cgpa"
        android:layout_toRightOf="@+id/onb"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deadline :: "
        android:layout_below="@+id/onb"
        android:paddingLeft="20dp"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        android:id="@+id/dl"/>

    <TextView
        android:id="@+id/lastdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="lastdate"
        android:layout_toRightOf="@+id/dl"
        android:layout_below="@+id/onboarddate"
        android:layout_centerHorizontal="true"
        android:paddingBottom="8dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/removecompany"
        android:layout_below="@+id/lastdate"
        android:text="Remove"
        android:visibility="gone"
        android:paddingBottom="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastdate"
        android:id="@+id/apply"
        android:text="Apply"
        android:visibility="gone"
        android:layout_marginBottom="8dp"/>
</RelativeLayout>