<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCompany"
    android:orientation="vertical">
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            android:id="@+id/scrol">

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                >

                <EditText
                    android:id="@+id/company"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Company Name"
                    android:inputType="text"
                    />

                <EditText
                    android:id="@+id/ctc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="CTC"
                    android:inputType="text"
                    android:layout_below="@+id/company"
                    />

                <EditText
                    android:id="@+id/profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Profile"
                    android:inputType="text"
                    android:layout_below="@+id/ctc"/>

                <EditText
                    android:id="@+id/cgpa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Minimum Required CGPA"
                    android:inputType="number"
                    android:layout_below="@id/profile"/>
                <EditText
                    android:id="@+id/onboarddate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="On board of Company"
                    android:inputType="text"
                    android:layout_below="@id/cgpa"/>
                <EditText
                    android:id="@+id/lastdate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Last date for application"
                    android:inputType="text"
                    android:layout_below="@id/onboarddate"/>
                <Button
                    android:id="@+id/ok"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="ADD"
                    android:layout_below="@+id/lastdate"
                    />

                <Button
                    android:id="@+id/discard"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ok"
                    android:layout_below="@id/lastdate"
                    android:text="Discard"
                    />

            </RelativeLayout>

        </ScrollView>


</android.support.constraint.ConstraintLayout>